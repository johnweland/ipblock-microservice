{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "./tests/",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "ignoreCompilerErrors": true,
    "theme": "minimal",
    "excludeExternals": true,
    "exclude": "serverless.ts"
  }
}
